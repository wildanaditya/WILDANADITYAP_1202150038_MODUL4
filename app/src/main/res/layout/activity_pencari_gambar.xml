<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.Wildan.android.WildanAdityaP_1202150038_StudyCase4.com.android.WildanAdityaP_1202150038_StudyCase4.PencariGambar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cari_gambar"
        android:textSize="26sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etGambarUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnCariGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_gambar"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imgGambar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:scaleType="centerCrop"/>

</LinearLayout>